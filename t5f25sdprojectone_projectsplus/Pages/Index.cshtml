@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero section -->
<section class="bg-primary-subtle rounded-4 p-4 p-lg-5 shadow-sm mb-4">
    <div class="row g-4 align-items-center">

        <!-- Text -->
        <div class="col-lg-6">
            <p class="text-uppercase text-secondary fw-semibold small mb-2"
               style="letter-spacing:0.16em;">
                Campus project collaboration
            </p>

            <h1 class="fw-bold display-6 mb-2">
                <span class="d-block">Build. Collaborate.</span>
                <span class="d-block">Get Recognized.</span>
            </h1>

            <p class="text-muted mb-4">
                Projects+ is the web-based platform where students, faculty, and mentors
                connect to launch real projects, track contributions, and turn verified
                work into credentials that matter.
            </p>

            <div class="d-flex flex-wrap gap-2">
                <a href="#" class="btn btn-primary rounded-pill px-4 shadow">
                    Get Started
                </a>
                <a href="#" class="btn btn-outline-primary rounded-pill px-4">
                    Learn More
                </a>
            </div>
        </div>

        <!-- Illustration (replace with <img> if you have one) -->
        <div class="col-lg-6">
            <div class="mx-auto" style="max-width:360px;">
                <div class="rounded-4 position-relative overflow-hidden"
                     style="aspect-ratio:4/3;background:radial-gradient(circle at 20% 0%,#e0ecff,#dbeafe 0 50%,#c7d2fe 60%,#bfdbfe 100%);">
                    <div class="position-absolute top-0 bottom-0 start-0 end-0 p-3">
                        <div class="h-100 rounded-4 bg-white bg-opacity-80 d-flex align-items-end justify-content-center gap-3 px-3 pb-3 position-relative">
                            <!-- Person 1 -->
                            <div class="d-flex flex-column align-items-center gap-2 w-50">
                                <div class="w-100 rounded-4 position-relative overflow-hidden"
                                     style="aspect-ratio:3/4;background:linear-gradient(180deg,#fecaca,#fb7185);">
                                    <div class="position-absolute top-2 start-3 end-3 rounded-pill bg-light opacity-75" style="height:40px;"></div>
                                    <div class="position-absolute bottom-3 start-4 end-4 rounded-3 bg-success" style="height:20px;"></div>
                                </div>
                                <div class="rounded-pill bg-light" style="height:6px;width:50%;"></div>
                            </div>
                            <!-- Person 2 -->
                            <div class="d-flex flex-column align-items-center gap-2 w-50">
                                <div class="w-100 rounded-4 position-relative overflow-hidden"
                                     style="aspect-ratio:3/4;background:linear-gradient(180deg,#bfdbfe,#60a5fa);">
                                    <div class="position-absolute top-2 start-3 end-3 rounded-pill bg-light opacity-75" style="height:40px;"></div>
                                    <div class="position-absolute bottom-3 start-4 end-4 rounded-3 bg-dark" style="height:20px;"></div>
                                </div>
                                <div class="rounded-pill bg-light" style="height:6px;width:50%;"></div>
                            </div>

                            <!-- Desk -->
                            <div class="position-absolute start-0 end-0 translate-middle-x"
                                 style="bottom:-8px;height:26px;border-radius:999px;background-color:#e5f0ff;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @* If you want to use a real image instead, replace the whole col-lg-6 block with:
        <div class="col-lg-6 text-center">
            <div class="mx-auto" style="max-width:360px;">
                <img src="~/img/homepage-illustration.png"
                     class="img-fluid rounded-4 shadow-sm"
                     alt="Students collaborating on a project" />
            </div>
        </div>
        *@
    </div>
</section>

<!-- Platform section -->
<section class="bg-white rounded-4 p-4 p-lg-5 shadow-sm">
    <div class="text-center mb-4">
        <h2 class="h4 fw-semibold mb-2">A Platform for Everyone</h2>
        <p class="text-muted mb-0">
            Projects+ offers tailored experiences for each user group, bringing
            students, faculty, and mentors together in one place to collaborate,
            validate contributions, and unlock new opportunities.
        </p>
    </div>

    <div class="row g-3">
        <!-- Students -->
        <div class="col-md-4">
            <article class="h-100 bg-light rounded-3 p-3 p-md-4 border border-light shadow-sm">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 bg-primary-subtle mb-3"
                     style="width:40px;height:40px;font-size:1.2rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
                    </svg>
                </div>
                <h3 class="h6 fw-semibold mb-2">For Students</h3>
                <p class="text-muted small mb-0">
                    Discover and join projects, collaborate with peers, and build a
                    portfolio of verified contributions you can share with employers.
                </p>
            </article>
        </div>

        <!-- Faculty -->
        <div class="col-md-4">
            <article class="h-100 bg-light rounded-3 p-3 p-md-4 border border-light shadow-sm">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 bg-primary-subtle mb-3"
                     style="width:40px;height:40px;font-size:1.2rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                    </svg>
                </div>
                <h3 class="h6 fw-semibold mb-2">For Faculty</h3>
                <p class="text-muted small mb-0">
                    Vet project proposals, monitor progress, and issue attestations
                    that connect academic work to real-world skills.
                </p>
            </article>
        </div>

        <!-- Mentors -->
        <div class="col-md-4">
            <article class="h-100 bg-light rounded-3 p-3 p-md-4 border border-light shadow-sm">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 bg-primary-subtle mb-3"
                     style="width:40px;height:40px;font-size:1.2rem;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z" />
                    </svg>
                </div>
                <h3 class="h6 fw-semibold mb-2">For Mentors</h3>
                <p class="text-muted small mb-0">
                    Support the next generation of talent, offer feedback on live
                    projects, and help shape meaningful, industry-ready outcomes.
                </p>
            </article>
        </div>
    </div>
</section>
