@*
    Shared layout for Projects+
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projects+</title>

    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/t5f25sdprojectone_projectsplus.styles.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header class="border-bottom bg-white">
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <!-- Logo -->
                    <span class="d-inline-flex align-items-center justify-content-center rounded-3"
                          style="width:28px;height:28px;background:linear-gradient(135deg,#2563eb,#4f46e5);box-shadow:0 8px 18px rgba(37,99,235,.4);">
                        <span style="width:11px;height:17px;border-radius:7px;background-color:#ffffff;display:block;"></span>
                    </span>
                    <span class="fw-semibold">Projects+</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <!-- Login button routes to Login page -->
                        <a class="btn btn-sm btn-outline-secondary rounded-pill px-4 shadow-sm"
                           asp-area="" asp-page="/Login">
                            Login
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main role="main" class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-top mt-3">
        <div class="container py-3 d-flex flex-wrap justify-content-between align-items-center small text-muted">
            <div class="d-flex flex-wrap gap-3">
                <a href="#" class="text-decoration-none text-secondary">About</a>
                <a href="#" class="text-decoration-none text-secondary">Contact</a>
                <a asp-area="" asp-page="/Privacy" class="text-decoration-none text-secondary">Privacy Policy</a>
                <a href="#" class="text-decoration-none text-secondary">Credits</a>
            </div>
            <span>© 2025 Projects+. All rights reserved.</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
