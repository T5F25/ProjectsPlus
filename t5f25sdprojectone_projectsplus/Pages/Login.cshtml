@page
@{
    ViewData["Title"] = "Login";
}

<section class="d-flex align-items-center justify-content-center" style="min-height:80vh;">
    <div class="card shadow-sm border-0" style="max-width: 420px; width: 100%; border-radius: 24px;">
        <div class="card-body p-4 p-md-5">

            <!-- Logo + title -->
            <div class="text-center mb-4">
                <div class="d-inline-flex align-items-center justify-content-center mb-2">
                    <span class="d-inline-flex align-items-center justify-content-center rounded-circle me-2"
                          style="width:32px;height:32px;background:rgba(37,99,235,0.08);">
                        <span class="d-inline-flex align-items-center justify-content-center rounded-3"
                              style="width:22px;height:22px;background:linear-gradient(135deg,#2563eb,#4f46e5);box-shadow:0 6px 14px rgba(37,99,235,.45);">
                            <span style="width:9px;height:14px;border-radius:7px;background-color:#ffffff;display:block;"></span>
                        </span>
                    </span>
                    <span class="fw-semibold fs-5">Projects+</span>
                </div>

                <h2 class="h4 fw-semibold mb-1">Welcome back</h2>
                <p class="text-muted small mb-0">Please enter your details to log in.</p>
            </div>

            <!-- Login form (UI only) -->
            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label small fw-semibold text-muted text-uppercase"
                           style="letter-spacing:0.08em;">
                        Email
                    </label>
                    <input type="email"
                           class="form-control"
                           id="email"
                           name="email"
                           placeholder="your@email.com"
                           required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label small fw-semibold text-muted text-uppercase"
                           style="letter-spacing:0.08em;">
                        Password
                    </label>
                    <input type="password"
                           class="form-control"
                           id="password"
                           name="password"
                           placeholder="Enter your password"
                           required />
                </div>

                <div class="d-flex justify-content-end mb-3">
                    <a href="#" class="small text-decoration-none text-primary">
                        Forgot your password?
                    </a>
                </div>

                <button type="submit"
                        class="btn btn-primary w-100 rounded-pill py-2 fw-semibold">
                    Login
                </button>
            </form>

            <p class="text-center text-muted small mt-4 mb-0">
                Donâ€™t have an account?
                <a href="#" class="text-decoration-none text-primary fw-semibold">Sign Up</a>
            </p>
        </div>
    </div>
</section>
