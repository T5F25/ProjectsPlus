@page
@{
  ViewData["Title"] = "Browse Projects";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 m-0">Browse Projects</h1>
  <a asp-page="Create" class="btn btn-primary">Create Project</a>
</div>

<form method="get" role="search" class="mb-3">
  <div class="input-group">
    <input class="form-control" name="query" placeholder="Search by title or overview" />
    <button class="btn btn-outline-secondary" type="submit">Search</button>
  </div>
</form>

<div class="alert alert-info">No projects found (stub state).</div>
