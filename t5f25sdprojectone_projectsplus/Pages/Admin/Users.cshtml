            <!-- Tabs -->
            <ul class="nav nav-tabs small mb-3">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#students">Students</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#faculty">Faculty</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#mentors">Mentors</button></li>
            </ul>

            <div class="tab-content">

                <!-- Students tab -->
                <div class="tab-pane fade show active" id="students">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No students found</div>
                        <div class="text-muted small">Student accounts will appear here.</div>
                    </div>
                </div>

                <!-- Faculty tab -->
                <div class="tab-pane fade" id="faculty">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No faculty found</div>
                        <div class="text-muted small">Faculty accounts will appear here.</div>
                    </div>
                </div>

                <!-- Mentors tab -->
                <div class="tab-pane fade" id="mentors">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No mentors found</div>
                        <div class="text-muted small">Mentor accounts will appear here.</div>
                    </div>
                </div>

            </div>
        </div>

    </section>
