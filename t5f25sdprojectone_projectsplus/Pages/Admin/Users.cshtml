@page
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex flex-column flex-lg-row gap-3">

    <!-- Sidebar -->
    <aside class="bg-white border rounded-4 p-3 p-lg-4" style="width: 260px; min-width: 220px;">
        <div class="mb-4">
            <div class="d-flex flex-column">
                <span class="fw-bold">Projects+</span>
                <span class="text-muted small">Administrator</span>
            </div>
        </div>

        <nav class="nav nav-pills flex-column gap-1 small">
            <a class="nav-link active">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" width="18" height="18" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87M16 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            Users
        </a>

        <a class="nav-link disabled">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" width="18" height="18" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 7h4l2 2h12v10H3V7z" />
            </svg>
            Projects
        </a>

        <a class="nav-link disabled">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" width="18" height="18" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 4a4 4 0 110 8 4 4 0 010-8zm8 8v4m2-2h-4m-6 2a6 6 0 016 6H6a6 6 0 016-6z" />
            </svg>
            Assign Supervisors
        </a>

        <a class="nav-link disabled">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" width="18" height="18" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 5l6 2v6l-6 2V5zm-3.34.67A2 2 0 004 7.58v8.84a2 2 0 003.66 1.91L11 17V7l-3.34-1.33z" />
            </svg>
            Send Announcement
        </a>

        <a class="nav-link disabled">
            
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" width="18" height="18" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 4h16v16H4V4zm0 0l8 8 8-8" />
            </svg>
            Send Notification
        </a>
        </nav>
    </aside>

    <!-- Main content -->
    <section class="flex-grow-1">

        <!-- Top bar -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h1 class="h4 fw-semibold mb-1">User Management</h1>
                <p class="text-muted small mb-0">
                    Review user requests and manage roles.
                </p>
            </div>
            <a asp-page="/Login" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                Logout
            </a>
        </div>

        <!-- User Approval Queue -->
        <div class="bg-white border rounded-4 p-3 p-lg-4 mb-4 shadow-sm">
            <h2 class="h6 fw-semibold mb-3">User Approval Queue</h2>

            <div class="alert alert-light border text-center py-4">
                <div class="fw-semibold mb-1">No pending approvals</div>
                <div class="text-muted small">New user applications will appear here.</div>
            </div>
        </div>

        <!-- All Current Users -->
        <div class="bg-white border rounded-4 p-3 p-lg-4 shadow-sm">
            <h2 class="h6 fw-semibold mb-3">All Current Users</h2>

            <!-- Tabs -->
            <ul class="nav nav-tabs small mb-3">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#students">Students</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#faculty">Faculty</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#mentors">Mentors</button></li>
            </ul>

            <div class="tab-content">

                <!-- Students tab -->
                <div class="tab-pane fade show active" id="students">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No students found</div>
                        <div class="text-muted small">Student accounts will appear here.</div>
                    </div>
                </div>

                <!-- Faculty tab -->
                <div class="tab-pane fade" id="faculty">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No faculty found</div>
                        <div class="text-muted small">Faculty accounts will appear here.</div>
                    </div>
                </div>

                <!-- Mentors tab -->
                <div class="tab-pane fade" id="mentors">
                    <div class="alert alert-light border text-center py-4">
                        <div class="fw-semibold mb-1">No mentors found</div>
                        <div class="text-muted small">Mentor accounts will appear here.</div>
                    </div>
                </div>

            </div>
        </div>

    </section>
</div>
